<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:text="Question 5"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="What functions are the most often used?"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/q5_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Music functions"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/q5_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Photo functions"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/q5_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Game functions"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/q5_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Business functions(Word,Excel,ect.)"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/q5_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="GPS functions"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/q5_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Data functions(Bluetooth,WLAN,ect.)"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/q5_7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Others"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#009688"
        android:text="NEXT"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- END    : Your code should be within this block -->
</LinearLayout>
