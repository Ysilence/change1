<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--  Start : Your code should be within this block -->


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Question 2"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="How much does your phone cost?"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/q2_rg"
        android:layout_width="match_parent"
        android:layout_height="229dp">

        <RadioButton
            android:id="@+id/q2_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Under 1000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q2_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="1000-1999"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q2_3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="2000-2999"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q2_4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="3000-3999"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q2_5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="more than 4000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#009688"
        android:layout_marginTop="121dp"
        android:text="NEXT"
        android:textColor="#000000"
        android:textSize="24sp" />


    <!-- END    : Your code should be within this block -->
</LinearLayout>
